CC = gcc
NAME = school
SRC = main.c foo.c bar.c baz.c
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	-$(RM) *~ \#*\# $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

$(OBJ): %.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@
